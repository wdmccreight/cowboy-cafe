<UserControl x:Class="PointOfSale.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Border>
            <StackPanel Orientation="Horizontal"> 
                <Button Name="ItemSelectionButton" Width="150" Click="ItemSelectionButton_Click">Item Selection</Button>
                <Button Name="CancelOrderButton" Width="150" Click="CancelOrderButton_Click">Cancel Order</Button>
                <Button Name="CompleteOrderButton" Width="150" Click="CompleteOrderButton_Click">Complete Order</Button>
            </StackPanel>
        </Border>
        <local:MenuItemSelectionControl Grid.Column="0" Grid.Row="1"></local:MenuItemSelectionControl>
        <local:OrderSummaryControl Grid.Column="1" Grid.RowSpan="2"></local:OrderSummaryControl>
    </Grid>
</UserControl>
